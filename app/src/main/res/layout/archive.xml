<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/archive"
    style="@style/linear_layout.days"
    >

    <LinearLayout
        style="@style/linear_layout.days"
        android:gravity="center">

        <pm.anna.takecare.EqualWidthHeightTextView
            android:id="@+id/howManyDays"
            style="@style/counter.main.days"
            android:text="X"
            />

        <TextView
            android:id="@+id/comment_days"
            style="@style/hi_text.days"
            android:paddingBottom="@dimen/padding_medium"
            android:text="@string/archive_zero"
            />

        <ScrollView
            style="@style/scroll">

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </ScrollView>
    </LinearLayout>

    <pm.anna.takecare.EqualWidthHeightTextView
        android:id="@+id/addButton"
        style="@style/counter.main.add"
        android:text="+"

        />

    <LinearLayout
        style="@style/linear_layout.add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/editDate"
            style="@style/addValues"
            android:drawableLeft="@drawable/ic_date_range_white_18dp"
            android:focusable="false"
            android:text="Sample date"
            />

        <LinearLayout
            style="@style/standardSize">

            <EditText
                android:id="@+id/pointsNumber"
                style="@style/addValues.number"
                android:drawableLeft="@drawable/ic_bubble_chart_white_18dp"
                />

            <TextView
                style="@style/addValues"
                android:text="@string/points"/>

        </LinearLayout>

        <LinearLayout
            style="@style/standardSize">

            <EditText
                android:id="@+id/bodyPointsNumber"
                style="@style/addValues.number"
                android:drawableLeft="@drawable/ic_face_white_18dp"
                />

            <EditText
                android:id="@+id/mindPointsNumber"
                style="@style/addValues.number"
                android:drawableLeft="@drawable/ic_extension_white_18dp"
                />

            <EditText
                android:id="@+id/soulPointsNumber"
                style="@style/addValues.number"
                android:drawableLeft="@drawable/ic_favorite_white_18dp"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
