<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/archive"
    style="@style/linear_layout.days"
    >

    <LinearLayout
        style="@style/linear_layout.days"
        android:gravity="center">

        <pm.anna.takecare.EqualWidthHeightTextView
            android:id="@+id/howManyDays"
            style="@style/counter.main.days"
            android:text="X"

            />

        <TextView
            android:id="@+id/comment_days"
            style="@style/hi_text.days"
            android:text="@string/archive_zero"
            android:paddingBottom="@dimen/padding_medium"
            />

        <ScrollView
            style="@style/scroll">

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

        </ScrollView>
    </LinearLayout>

    <pm.anna.takecare.EqualWidthHeightTextView
        android:id="@+id/addButton"
        style="@style/counter.main.add"
        android:text="+"

        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editDate"
        android:layout_alignParentBottom="true"
        android:focusable="false"

        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointsNumber"
        android:text="0"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
       android:inputType="number"
        />


</RelativeLayout>
