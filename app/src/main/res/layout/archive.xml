<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/archive"
    style="@style/linear_layout.days"
    >

    <LinearLayout
        style="@style/linear_layout.days.2"
       >

        <pm.anna.takecare.EqualWidthHeightTextView
            android:id="@+id/howManyDays"
            style="@style/counter.main.days"
            />

        <ListView
            android:id="@+id/list"
            style="@style/list"
            />
    </LinearLayout>

    <include layout="@layout/empty_archive"></include>

    <ImageButton
        android:id="@+id/addButton"
        style="@style/counter_add"
        app:srcCompat="@drawable/ic_add_circle_white_48px"
        />

    <pm.anna.takecare.EqualWidthHeightTextView
        android:id="@+id/deleteButton"
        style="@style/counter.main.delete"
        />

    <LinearLayout
        style="@style/iconContainer"
        >

        <ImageButton
            android:id="@+id/showSimple"
            style="@style/showIcon"
            app:srcCompat="@drawable/ic_lens_black_48px"/>

        <ImageButton
            android:id="@+id/showDetails"
            style="@style/showIcon.margin"
            app:srcCompat="@drawable/ic_grain_white_48px"/>

        <ImageButton
            style="@style/showIcon.margin"
            app:srcCompat="@drawable/ic_timelapse_black_48px"/>
    </LinearLayout>

    <include layout="@layout/add_panel"></include>

</RelativeLayout>
