<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/archive"
    style="@style/linear_layout.days"
    >

    <LinearLayout
        style="@style/linear_layout.days"
        android:gravity="top|center">

        <pm.anna.takecare.EqualWidthHeightTextView
            android:id="@+id/howManyDays"
            style="@style/counter.main.days"
            />

        <ListView
            android:id="@+id/list"
            style="@style/list"
            />
    </LinearLayout>

    <include layout="@layout/empty_archive"></include>

    <pm.anna.takecare.EqualWidthHeightTextView
        android:id="@+id/addButton"
        style="@style/counter.main.add"
        android:text="@string/plus"
        />

    <pm.anna.takecare.EqualWidthHeightTextView
        android:id="@+id/deleteButton"
        style="@style/counter.main.delete"
        />

    <include layout="@layout/add_panel"></include>

</RelativeLayout>
