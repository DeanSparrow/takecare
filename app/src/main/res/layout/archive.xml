<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/archive"
    style="@style/linear_layout.days"
    >

    <LinearLayout
        style="@style/linear_layout.days"
        android:gravity="top|center">

        <pm.anna.takecare.EqualWidthHeightTextView
            android:id="@+id/howManyDays"
            style="@style/counter.main.days"
            />

        <TextView
            android:id="@+id/comment_days"
            style="@style/hi_text.days"
            android:text="@string/archive_zero"
            />

        <ScrollView
            style="@style/scroll">

            <TextView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </ScrollView>
    </LinearLayout>

    <pm.anna.takecare.EqualWidthHeightTextView
        android:id="@+id/addButton"
        style="@style/counter.main.add"
        android:text="@string/plus"
        />


    <pm.anna.takecare.EqualWidthHeightTextView
        android:id="@+id/deleteButton"
        style="@style/counter.main.delete"
        />

    <include layout="@layout/add_panel"></include>

</RelativeLayout>
