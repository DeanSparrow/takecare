<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="standardSize">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="scroll">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
    </style>

    <style name="Button" parent="standardSize">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
        <item name="android:background">@drawable/toggle_selector</item>
        <item name="android:textColor">@color/toggle_color</item>
        <item name="android:textSize">@dimen/font_smaller</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <style name="category">
        <item name="android:background">@drawable/category</item>
<item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:layout_margin">@dimen/padding_tiny</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>


</resources>
