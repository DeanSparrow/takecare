<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="colorControlNormal">@color/blue_text</item>
        <item name="colorControlActivated">@color/blue_text</item>
        <item name="textColorAlertDialogListItem">@color/blue_text</item>
        <item name="colorAccent">@color/blue_text</item>
        <item name="android:textColorPrimary">@color/blue_text</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="standardSize">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="scroll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:paddingBottom">@dimen/padding_smaller</item>
    </style>

    <style name="section" parent="standardSize">
        <item name="android:columnCount">2</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="hi_text" parent="standardSize">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="hi_text.name">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:paddingTop">@dimen/padding_smaller</item>
    </style>


    <style name="hi_text.days">
        <item name="android:textColor">@color/blue_text</item>
        <item name="android:paddingTop">@dimen/zero</item>
    </style>

    <style name="question" parent="standardSize">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/semi_transparent</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:paddingTop">@dimen/padding</item>
    </style>

    <!--  COUNTERS  -->

    <style name="counter" parent="standardSize">
        <item name="android:layout_below">@id/careText</item>
        <item name="android:layout_marginBottom">@dimen/padding_smaller</item>
        <item name="android:layout_marginTop">@dimen/padding_normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

    <style name="counter.main">
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/padding_circle</item>
    </style>

    <style name="counter.main.days">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:background">@drawable/circle_days</item>
        <item name="android:layout_marginTop">@dimen/padding_medium</item>
        <item name="android:layout_marginBottom">@dimen/padding_normal</item>
    </style>

    <style name="counter.main.huge">
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:background">@drawable/circle_days</item>
        <item name="android:layout_margin">@dimen/padding_normal</item>
        <item name="android:padding">@dimen/padding_normal</item>
    </style>

    <style name="counter_add">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/padding_smaller</item>

    </style>

    <style name="counter.main.delete">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:background">@drawable/circle_delete</item>
        <item name="android:padding">@dimen/zero</item>

    </style>

    <style name="counter.mini">
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:textColor">@color/semi_transparent</item>
        <item name="android:paddingTop">@dimen/zero</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:layout_marginTop">@dimen/zero</item>
        <item name="android:layout_marginBottom">@dimen/padding</item>
    </style>

    <style name="counter.mini.green">
        <item name="android:layout_marginBottom">@dimen/zero</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="counter.mini.blue">
        <item name="android:layout_marginBottom">@dimen/zero</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="counter.mini.violet">
        <item name="android:layout_marginBottom">@dimen/zero</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/violet</item>
    </style>

    <!--  LINEAR LAYOUTS  -->

    <style name="linear_layout">
        <item name="android:background">@color/background_color</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="linear_layout.add">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/circle_days</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="linear_layout.sections">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/circle_days</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/padding_circle</item>

    </style>

    <style name="threelines" parent="standardSize">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/padding</item>
    </style>

    <style name="linear_layout.days">
        <item name="android:background">@color/archive_color</item>
    </style>

    <style name="linear_layout.days.empty">
        <item name="android:paddingTop">@dimen/padding_smaller</item>
    </style>

    <style name="linear_layout.body">
        <item name="android:background">@color/green</item>
    </style>

    <style name="linear_layout.mind">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="linear_layout.soul">
        <item name="android:background">@color/violet</item>
    </style>

    <style name="linear_layout.detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/archive_color</item>
    </style>

    <style name="linear_layout.detail_points">
        <item name="android:layout_width">@dimen/detail_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">@dimen/margin_button</item>
        <item name="android:gravity">right</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/padding_tiny</item>
        <item name="android:paddingTop">@dimen/margin_button</item>
        <item name="android:background">@color/archive_color</item>
    </style>

    <!--  LIST VIEW  -->

    <style name="list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding_normal</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="list_item" parent="linear_layout.days">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/padding</item>
    </style>

    <style name="list_element">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_smaller</item>
        <item name="android:background">@color/archive_color</item>
    </style>

    <style name="list_element.date">
        <item name="android:layout_weight">2</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
    </style>

    <style name="list_element.points">
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="list_element.points.detail">
        <item name="android:layout_width">@dimen/detail_width</item>
        <item name="android:layout_height">@dimen/detail_height</item>
        <item name="android:drawablePadding">@dimen/padding_tiny</item>
    </style>

    <style name="list_element.points.detail.b">
        <item name="android:drawableRight">@drawable/ic_face_white_18dp</item>
    </style>

    <style name="list_element.points.detail.m">
        <item name="android:drawableRight">@drawable/ic_extension_white_18dp</item>
    </style>

    <style name="list_element.points.detail.s">
        <item name="android:drawableRight">@drawable/ic_favorite_white_18dp</item>
    </style>

    <!--  BUTTONS  -->

    <style name="yesNoButtons" parent="standardSize">
        <item name="android:gravity">center|top</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/padding_tiny</item>
    </style>

    <style name="Button" parent="standardSize">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
        <item name="android:background">@drawable/toggle_selector</item>
        <item name="android:textSize">@dimen/font_smaller</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <style name="Button.yes">
        <item name="android:src">@drawable/ic_check_circle_white_48dp</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="Button.no">
        <item name="android:layout_below">@id/anchor</item>
        <item name="android:layout_toRightOf">@id/anchor</item>
        <item name="android:padding">@dimen/zero</item>
        <item name="android:src">@drawable/ic_cancel_white_36dp</item>
    </style>

    <style name="Button.body">
        <item name="android:textColor">@color/toggle_color_body</item>
    </style>

    <style name="Button.mind">
        <item name="android:textColor">@color/toggle_color_mind</item>
    </style>

    <style name="Button.soul">
        <item name="android:textColor">@color/toggle_color_soul</item>
    </style>

    <style name="anchor">
        <item name="android:layout_width">@dimen/padding_medium</item>
        <item name="android:layout_height">@dimen/anchor_height</item>
    </style>

    <style name="category">
        <item name="android:background">@drawable/category</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:layout_margin">@dimen/padding_smaller</item>
        <item name="android:layout_marginBottom">@dimen/zero</item>
    </style>

    <!--  ADD ARCHIVE ITEM  -->

    <style name="question_save" parent="standardSize">
        <item name="android:paddingBottom">@dimen/padding_circle</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/semi_transparent</item>
        <item name="android:textSize">@dimen/font_smaller</item>
    </style>

    <style name="question_save.thoughts">
        <item name="android:gravity">right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="android:maxLength">160</item>
        <item name="android:lines">2</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">5</item>
        <item name="android:paddingTop">@dimen/zero</item>
        <item name="android:layout_marginRight">@dimen/padding_tiny</item>
        <item name="android:hint">@string/comment_msg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableLeft">@drawable/ic_mode_comment_white_18dp</item>
        <item name="android:drawablePadding">@dimen/padding_tiny</item>
    </style>

    <style name="display_thoughts">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingTop">@dimen/padding_detail</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_smaller</item>
    </style>

    <style name="hidden_details">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/details</item>
        <item name="android:layout_marginBottom">@dimen/details_hide</item>
        <item name="android:alpha">0.85</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="addValues" parent="standardSize">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_smaller</item>
        <item name="android:drawablePadding">@dimen/padding_tiny</item>
        <item name="android:paddingRight">@dimen/padding_tiny</item>
        <item name="android:paddingTop">@dimen/zero</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="addValues.cal">
        <item name="android:drawableLeft">@drawable/ic_date_range_white_18dp</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="addValues.number">
        <item name="android:inputType">number</item>
        <item name="android:text">@string/default_value</item>
    </style>

    <style name="addValues.number.all">
        <item name="android:drawableLeft">@drawable/ic_bubble_chart_white_18dp</item>
    </style>

    <style name="addValues.number.body">
        <item name="android:drawableLeft">@drawable/ic_face_white_18dp</item>
    </style>

    <style name="addValues.number.mind">
        <item name="android:drawableLeft">@drawable/ic_extension_white_18dp</item>
    </style>

    <style name="addValues.number.soul">
        <item name="android:drawableLeft">@drawable/ic_favorite_white_18dp</item>
    </style>


</resources>
